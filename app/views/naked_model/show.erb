<h1>
  Displaying <%= @model_name.titleize %> with ID <%= @model.id %>
  <%= link_to 'Back to list', { :action => 'index' }, :class => 'smaller' %>
  <%= link_to 'Edit',  { :action => 'edit', :id => @model.id }, :class => 'smaller' %>
</h1>

<table border = "0" cellpadding ="0" cellspacing = "0" class = "outside_border">
  <% @model_klass.naked_model_read_only_columns.each do |column| %>
    <tr>
      <td style = "vertical-align: top; text-align: right;">
        <strong><%= column.name.titleize %></strong>
      </td>
      <td style = "vertical-align: top">
        <%=h @model.send(column.name) %>
      </td>
    </tr>
  <% end %>
</table>